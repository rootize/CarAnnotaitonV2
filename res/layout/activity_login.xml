<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_back_ground"
    android:orientation="vertical"
    tools:context=".Login" >

    <TextView
        android:id="@+id/welcome_words"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/welcome_words_string"
        android:textColor="#AFDEFE"
        android:textSize="45sp"
        android:textStyle="italic"
        android:typeface="serif" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/welcome_words"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100sp"
        android:orientation="vertical"
        android:weightSum="4" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/Email"
            android:textColor="@android:color/white"
            android:textSize="50sp" />

        <EditText
            android:id="@+id/login_account"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:inputType="text" 
            android:layout_weight="1"/>

        <Button
            android:id="@+id/login_login_btn"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/login_string_onbtn"
            android:textColor="@android:color/white"
            android:textSize="50sp" />

        <Button
            android:id="@+id/login_anonymous_btn"
            android:layout_width="wrap_content"
            android:layout_height="0dp" 
            android:layout_weight="1"
            android:layout_marginBottom="100dp"
            android:layout_marginTop="20sp"
            android:gravity="bottom"
            android:text="@string/login_anonymous_string_onbtn"
            android:textColor="@android:color/white"
            android:textSize="50sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <Button
            android:id="@+id/readme_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/readme_string_onbtn" />

        <!-- <Button
            android:id="@+id/login_signup_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_up_string" /> -->
    </LinearLayout>

</RelativeLayout>